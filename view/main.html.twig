<body>
  <div class="container">
    <div class="navbar">
      <a class="navbar-brand" href="{{ url('list') }}">Seedbox</a>
      <ul class="nav navbar-nav">
        <li class="active"><a href="{{ url('list') }}">Files</a></li>
      </ul>
    </div>
    <ul class="breadcrumb">
      <li><a href="{{ url('list', {'path': '/'}) }}">root</a></li>
      {% set crumb = '' %}
      {% for level in path|split('/')[1:-1] %}
        {% set crumb = crumb~'/'~level %}
      <li><a href="{{ url('list', {'path': crumb}) }}">{{ level }}</a></li>
      {% endfor %}
      <li class="active">{{ path|split('/')|last }}</li>
    </ul>
    <div class="list-group">
      {% for directory in directories %}
      <a href="{{ url('list', {'path': path~'/'~directory.getRelativePathName })}}" class="list-group-item">
        {{ directory.getRelativePathName }}/
      </a>
      {% endfor %}
      {% for file in files %}
      <a href="{{ url('download', {'path': path~'/'~file.getRelativePathName })}}" class="list-group-item">
        {{ file.getFileName }}
      </a>
      {% endfor %}
    </ul>
  </div>
